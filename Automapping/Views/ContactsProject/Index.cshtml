@model IQueryable<Presentation.ViewModels.ContactProjectViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ContactId)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().City)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Street)
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContactId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
        </td>

        <td>
            <a asp-action="Edit" asp-route-id="@item.ContactId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.ContactId">Details</a> |
